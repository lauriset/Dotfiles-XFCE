[module/dots]
type = custom/text
content = " "

content-background = ${color.mb}
content-foreground = ${color.mb}
content-padding = 1
content-font = 0

; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

